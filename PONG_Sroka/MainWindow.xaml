<Window x:Class="PONG_Sroka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PONG_Sroka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Black"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        MouseMove="Window_MouseMove">
    <Grid>
        <Canvas x:Name="MainCanavs" Width="800" Height="450">
            <Label x:Name="KeyboardPlayer" FontSize="20" Content="0" Foreground="White" Canvas.Left="200" Canvas.Top="50"/>
            <Label x:Name="MousePlayer" FontSize="20" Content="0" Foreground="White" Canvas.Right="200" Canvas.Top="50"/>
        </Canvas>
    </Grid>
</Window>
